<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong>投稿者:</strong>
  <%= @report.user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @report.user.email %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:body) %>:</strong>
  <%= @report.body %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= @report.created_at.strftime("%Y年%-m月%-d日") %>
</p>

<% @comments.each do |comment|%>
  <p>
    <strong><%= Comment.human_attribute_name(:content) %>:</strong>
    <% if comment.user.name.present? %>
      <%= comment.user.name %>
    <% else %>
      <%= comment.user.email %>
    <% end %>
    <%= comment.created_at.strftime("%Y年%-m月%-d日") %>
    <%= comment.content %>
    <%= link_to t('views.common.destroy'), report_comment_path(@report, comment.id), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>  </p>
<% end %>

<%= render 'comments/form', commentable: @report, comment: Comment.new %>

<% if @report.user_id == current_user.id %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %>
<% end %>
<%= link_to t('views.common.back'), reports_path %>
